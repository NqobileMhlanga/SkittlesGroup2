<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".product_owner_menu">


    <Button
        android:id="@+id/buttonSprint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonProduct"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textColor="#000000"
        android:onClick="onScrum"
        android:text="Sprint objective and Review" />



    <Button
        android:id="@+id/buttonProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonCreateProject"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textColor="#000000"
        android:onClick="onProductDes"
        android:text="Product Description" />

    <Button
        android:id="@+id/buttonCreateProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="73dp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textColor="#000000"
        android:onClick="onProduct"
        android:text="Create Project" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Product Owner Home"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/buttonProductback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onProductBackLog"
        android:layout_below="@id/buttonSprint"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Product Backlog" />


</RelativeLayout>